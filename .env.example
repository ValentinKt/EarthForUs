# PostgreSQL connection (prefer using a single DATABASE_URL)
# Example: postgres://earthforus:supersecret@localhost:5432/earthforus?sslmode=disable
DATABASE_URL=

# Optional discrete settings (used if DATABASE_URL is not set)
PGHOST=localhost
PGPORT=5432
PGDATABASE=earthforus
PGUSER=earthforus
PGPASSWORD=supersecret

# Pooling & timeouts
PG_POOL_MAX=10
PG_POOL_IDLE_TIMEOUT_MS=30000
PG_POOL_CONNECTION_TIMEOUT_MS=5000
PG_STATEMENT_TIMEOUT_MS=5000

# SSL configuration (for production deployments)
# Set to 'require' when using managed providers that enforce SSL (e.g., Heroku, Render, Neon)
PG_SSL_MODE=disable