{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vite/client", "node", "jest", "@testing-library/jest-dom"],
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/*.ts",
    "src/**/__tests__/*.tsx",
    "src/setupTests.ts",
    "src/types/jest-dom.d.ts"
  ]
}